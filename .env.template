# BAYNEX.A.X Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
NODE_ENV=development
LOG_LEVEL=info
PORT=3000
WS_PORT=8080
HEALTH_CHECK_PORT=3001

# =============================================================================
# JWT & SECURITY
# =============================================================================
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-in-production
ENCRYPTION_KEY=your-32-character-encryption-key

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
TRADING_ENABLED=false
TRADING_MODE=demo

# Maximum daily loss (USD)
MAX_DAILY_LOSS=25.00

# Maximum simultaneous trades
MAX_SIMULTANEOUS_TRADES=5

# Default trade amount (USD)
DEFAULT_TRADE_AMOUNT=1.00

# =============================================================================
# DERIV PLATFORM CONFIGURATION
# =============================================================================
DERIV_ENABLED=false
DERIV_DEMO=true
DERIV_API_TOKEN=your-deriv-api-token-here
DERIV_APP_ID=your-deriv-app-id-here
DERIV_SERVER=ws.binaryws.com

# =============================================================================
# METATRADER 5 CONFIGURATION
# =============================================================================
MT5_ENABLED=false
MT5_DEMO=true
MT5_SERVER=your-mt5-server
MT5_LOGIN=your-mt5-login
MT5_PASSWORD=your-mt5-password
MT5_PATH=/path/to/mt5/installation

# =============================================================================
# IQ OPTION CONFIGURATION
# =============================================================================
IQ_ENABLED=false
IQ_DEMO=true
IQ_EMAIL=your-iq-option-email@example.com
IQ_PASSWORD=your-iq-option-password

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
FIREBASE_ENABLED=true
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdefghijklmnop
FIREBASE_SERVICE_ACCOUNT_KEY=/path/to/service-account-key.json

# =============================================================================
# TELEGRAM NOTIFICATIONS
# =============================================================================
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# =============================================================================
# WHATSAPP NOTIFICATIONS
# =============================================================================
WHATSAPP_ENABLED=false
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE=your-phone-number-with-country-code

# =============================================================================
# EMAIL NOTIFICATIONS
# =============================================================================
EMAIL_ENABLED=false
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=BAYNEX.A.X System <your-email@gmail.com>
EMAIL_TO=notifications@yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (default - no configuration needed)
DB_TYPE=sqlite

# MongoDB (optional)
MONGODB_ENABLED=false
MONGODB_URI=mongodb://localhost:27017/baynex-ax
MONGODB_DATABASE=baynex-ax

# MySQL (optional)
MYSQL_ENABLED=false
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=baynex_ax
MYSQL_USER=your-mysql-user
MYSQL_PASSWORD=your-mysql-password

# Redis (optional - for caching)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# AI & LEARNING CONFIGURATION
# =============================================================================
AI_LEARNING_ENABLED=true
AI_LEARNING_RATE=0.01
AI_MIN_DATA_POINTS=100
AI_RETRAIN_INTERVAL=86400000

# =============================================================================
# VOICE ASSISTANT CONFIGURATION
# =============================================================================
VOICE_ENABLED=true
VOICE_MODE=smart
VOICE_PERSONALITY=professional
VOICE_LANGUAGE=en-US

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/path/to/backup/directory

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# News API for market sentiment
NEWS_API_KEY=your-news-api-key

# Alpha Vantage for market data
ALPHAVANTAGE_API_KEY=your-alphavantage-api-key

# CoinGecko API for crypto data
COINGECKO_API_KEY=your-coingecko-api-key

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Application monitoring
SENTRY_DSN=your-sentry-dsn

# Performance monitoring
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# Google Analytics
GA_TRACKING_ID=your-google-analytics-id

# =============================================================================
# CLOUD DEPLOYMENT SETTINGS
# =============================================================================
# Render.com
RENDER_EXTERNAL_URL=https://your-app.onrender.com

# Heroku
HEROKU_APP_NAME=your-heroku-app-name

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode
DEBUG=false

# Enable hot reload in development
HOT_RELOAD=true

# Enable API documentation
API_DOCS_ENABLED=true

# Enable test mode
TEST_MODE=false

# =============================================================================
# PRODUCTION OPTIMIZATIONS
# =============================================================================
# Enable gzip compression
COMPRESSION_ENABLED=true

# Enable caching
CACHE_ENABLED=true

# Session timeout (milliseconds)
SESSION_TIMEOUT=3600000

# Rate limiting (requests per minute)
RATE_LIMIT=100

# =============================================================================
# SSL CONFIGURATION (Production)
# =============================================================================
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_KEY_PATH=/path/to/ssl/private.key

# =============================================================================
# CLUSTERING & SCALING
# =============================================================================
# Number of worker processes (0 = auto-detect CPU cores)
CLUSTER_WORKERS=0

# Enable PM2 clustering
PM2_ENABLED=false

# Maximum memory usage per process (MB)
MAX_MEMORY=512

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable experimental features
EXPERIMENTAL_FEATURES=false

# Enable beta features
BETA_FEATURES=false

# Enable maintenance mode
MAINTENANCE_MODE=false

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================
# Add your custom environment variables here
CUSTOM_SETTING_1=value1
CUSTOM_SETTING_2=value2
